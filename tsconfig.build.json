{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "outDir": "lib",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

"skipLibCheck": true,
    "noImplicitAny": false,
"noImplicitReturns": false,
    "forceConsistentCasingInFileNames": false

  },

  "exclude": ["node_modules","src/__tests__"]
}
